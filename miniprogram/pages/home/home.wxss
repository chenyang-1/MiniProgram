/* pages/home/home.wxss */
/* 轮播图片 */
.u-wrp-bnr{
  width:100%;
  height:400rpx;
  display:block;
  position:relative; 
}
.u-img-slide{
  width:100%;
  height:inherit;
}
/* 电影详情部分 */
/* 1.电影区域 */
.movie{
  display: flex;
  padding:10px;
  border-bottom: 1rpx solid #ccc;/*下划线*/ 
}
/* 2.左侧图片 */
.movie-img{
  width:300rpx;height:400rpx;
  margin-right:20rpx;/*与右侧文字间距*/
}
/* 3.右侧部分 */
.movie-info{
  flex:1;             /*将右侧区域充满*/
  font-size: 28rpx;
  line-height: 1.8;   /*行高,垂直居中*/
}
/* 4.右侧电影标题 */
.movie-title{
  color:#666;
  font-size:35rpx;
}
/* 5.右侧电影评分 */
.movie-score{
  color:#faaf00;
}
/* 6.右侧电影详情按钮 */
.movie-comment{
  height:60rpx;        /*按钮高度*/
  background:#e54847;
  color:#fff;
  font-size:26rpx;
  margin-top:120rpx;
}